<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prac.s1.notice.NoticeDAO">
	<select id="list" resultType="NoticeDTO" parameterType="Pager">
	SELECT * FROM
		(SELECT ROWNUM R, N.* FROM
		(SELECT * FROM NOTICE 
		WHERE NUM>0 
		AND
		<choose>
		<when test="kind=='col1'">
		TITLE
		</when>
		<when test="kind=='col2'">
		CONTENTS
		</when>
		<otherwise>
		WRITER
		</otherwise>
		</choose>
		LIKE '%'||#{search}||'%'
		 ORDER BY NUM DESC)N)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="total" resultType="Long" parameterType="Pager">
	SELECT COUNT(NUM) FROM NOTICE
		WHERE NUM>0 
		AND
		<choose>
		<when test="kind=='col1'">
		TITLE
		</when>
		<when test="kind=='col2'">
		CONTENTS
		</when>
		<otherwise>
		WRITER
		</otherwise>
		</choose>
		 LIKE '%'||#{search}||'%'
	</select>
	
	<insert id="add" parameterType="NoticeDTO">
		INSERT INTO
		NOTICE(NUM,TITLE,CONTENTS,WRITER,REGDATE,HIT)
		VALUES(NOTICE_SEQ.NEXTVAL,#{title},#{contents},#{writer},SYSDATE,#{hit})
	</insert>

	<select id="detail" parameterType="NoticeDTO"
		resultType="NoticeDTO">
		SELECT *FROM NOTICE WHERE NUM=#{num}
	</select>
	<delete id="delete" parameterType="NoticeDTO">
		DELETE NOTICE WHERE NUM=#{num}
	</delete>
	<update id="update" parameterType="NoticeDTO">
		UPDATE NOTICE SET TITLE=#{title},CONTENTS=#{contents}
		WHERE NUM=#{num}
	</update>


</mapper>